<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">



    <Button
        android:id="@+id/btn_calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/black_button"
        android:textColor="@color/White"
        android:text="date" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="136dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/btn_calender"
        android:layout_alignParentStart="true"
        android:layout_marginStart="47dp"
        android:hint="Selected Date will appear here."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Morning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="Morning Slots"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/s1"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:padding="10dp"
                android:text="07-08am"
                android:textSize="18dp" />

            <Button
                android:id="@+id/s2"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:text="08-09am"
                android:padding="10dp"
                android:textSize="18dp" />

            <Button
                android:id="@+id/s3"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:textSize="18dp"
                android:padding="10dp"
                android:text="09-10am" />

            <Button
                android:id="@+id/s4"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:textSize="18dp"
                android:padding="10dp"
                android:text="10-11am" />

            <Button
                android:id="@+id/s5"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:padding="10dp"
                android:textSize="18dp"
                android:text="11-12pm" />

            <TextView
                android:id="@+id/tv_afternoon"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:text="Afternoon Slots"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/s6"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:textSize="18dp"
                android:text="01-02pm" />

            <Button
                android:id="@+id/s7"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:textSize="18dp"
                android:text="02-03pm" />

            <Button
                android:id="@+id/s8"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:textSize="18dp"
                android:text="03-04pm" />

            <Button
                android:id="@+id/s9"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:textSize="18dp"
                android:text="04-05pm" />

            <Button
                android:id="@+id/s10"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:textSize="18dp"
                android:text="05-06pm" />

            <Button
                android:id="@+id/s11"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:textSize="18dp"
                android:text="06-07pm" />

            <TextView
                android:id="@+id/tv_evening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evening Slots"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/s12"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:textSize="18dp"
                android:text="07-08pm" />

            <Button
                android:id="@+id/s13"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:textSize="18dp"
                android:text="08-09pm" />

            <Button
                android:id="@+id/s14"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:textSize="18dp"
                android:text="09-10pm" />

            <Button
                android:id="@+id/s15"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:textSize="18dp"
                android:text="10-11pm" />

            <Button
                android:id="@+id/s16"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@color/Transparent"
                android:textSize="18dp"
                android:text="11-12am" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>